<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2C872">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profilePictureTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Profile Picture"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/profile_picture_image_view"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/take_picture_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:text="Take Picture"
                    android:textColor="#A2C872"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/upload_picture_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:text="Upload Picture"
                    android:textColor="#A2C872"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/bioTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Bio"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/bio_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="#FFFFFF"
                android:hint="Enter your bio"
                android:padding="8dp" />

            <TextView
                android:id="@+id/skillsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Skills"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <ListView
                android:id="@+id/skillsListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="#FFFFFF"
                android:choiceMode="multipleChoice"
                android:padding="8dp" />

            <TextView
                android:id="@+id/selectedSkillsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Selected Skills"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/selectedSkillsListTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="#FFFFFF"
                android:padding="8dp" />
            <Spinner
                android:id="@+id/skills_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/skills_array"
                android:prompt="@string/skills_prompt"/>

            <Button
                android:id="@+id/add_skill_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_skill"/>

            <ListView
                android:id="@+id/selected_skills_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"/>
            <Button
                android:id="@+id/save_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#FFFFFF"
                android:text="Save"
                android:textColor="#A2C872"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>