<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridLayout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Hello"/>
    <GridLayout
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:paddingVertical="15dp"
        android:columnCount="3"
        android:rowCount="8"
        android:layout_columnWeight="1">

        <TextView
            android:layout_columnWeight="1"
            android:text=""
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_row="0"
            />

        <TextView
            android:layout_columnWeight="1"
            android:text="Start Time"
            android:textStyle="bold"
            android:layout_column="1"
            android:layout_row="0"
            />
        <TextView
            android:layout_columnWeight="1"
            android:text="End Time"
            android:textStyle="bold"
            android:layout_column="2"
            android:layout_row="0"
            />

        <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="Monday"
            android:textStyle="bold" />
        <TextView
            android:text="Tuesday"
            android:layout_columnWeight="1"
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_row="2"/>
        <TextView
            android:text="Wednesday"
            android:layout_columnWeight="1"
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_row="3"/>
        <TextView
            android:text="Thursday"
            android:layout_columnWeight="1"
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_row="4"/>
        <TextView
            android:text="Friday"
            android:layout_columnWeight="1"
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_row="5"/>
        <TextView
            android:text="Saturday"
            android:layout_columnWeight="1"
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_row="6"/>
        <TextView
            android:text="Sunday"
            android:layout_columnWeight="1"
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_row="7"/>

        <Spinner
            android:id="@+id/mon_start"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />

        <Spinner
            android:id="@+id/mon_end"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />

        <Spinner
            android:id="@+id/tue_start"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Spinner
            android:id="@+id/tue_end"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />
        <Spinner
            android:id="@+id/wed_start"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Spinner
            android:id="@+id/wed_end"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />
        <Spinner
            android:id="@+id/thu_start"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Spinner
            android:id="@+id/thu_end"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />
        <Spinner
            android:id="@+id/fri_start"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Spinner
            android:id="@+id/fri_end"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />
        <Spinner
            android:id="@+id/sat_start"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Spinner
            android:id="@+id/sat_end"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />
        <Spinner
            android:id="@+id/sun_start"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Spinner
            android:id="@+id/sun_end"
            android:layout_row="7"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />

    </GridLayout>
    <Button
        android:id="@+id/test_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Hi im a button"/>


</LinearLayout>


