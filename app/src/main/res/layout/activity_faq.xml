<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Frequently Asked Questions"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#228B22"
        android:padding="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#228B22" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How do you make appointments"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="16dp"
        android:textColor="#228B22" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to the appointment screen and make appointment"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:textColor="#000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#228B22" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How do you change your profile picture"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="16dp"
        android:textColor="#228B22" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to profile set up and upload/take picture"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:textColor="#000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#228B22" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How to search for employers"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="16dp"
        android:textColor="#228B22" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to search button and search for employer"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:textColor="#000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#228B22" />

</LinearLayout>
